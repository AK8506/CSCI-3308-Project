{{!-- navigation.hbs --}}
<nav class="navbar" style="display: flex; justify-content: space-between; background-color: rgba(0, 0, 0, 0.7); padding: 10px 20px;">
  <div style="display: flex; gap: 10px;">
    {{#unless user}}
      <button onclick="location.href='/login'" class="btn btn-light">Login</button>
      <button onclick="location.href='/register'" class="btn btn-light">Register</button>
    {{else}}
      <button onclick="location.href='/logout'" class="btn btn-light">Logout</button>
    {{/unless}}
  </div>
</nav>
